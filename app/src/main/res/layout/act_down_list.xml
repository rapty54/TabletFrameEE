<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/contents_top_tl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:background="#0000cd"
            android:gravity="center"
            android:text="@string/tx_edu_tech_as_is_download_contents_title"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/page_top_title_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contents_top_tl"
            android:layout_margin="2dp"
            android:background="@android:color/holo_blue_dark"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/page_top_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/file_delete_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="파일 모두 삭제"
                android:textSize="12dp"
                android:visibility="gone" />

        </LinearLayout>

        <!--Recycle Item List-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/page_top_title_ll"
            android:fitsSystemWindows="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/floatBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round"
            android:src="@android:drawable/arrow_up_float" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loading_lV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="42dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="@string/tx_waiting_network">

        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cover_block"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6495ed"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/cover_block_title_top"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:background="#0000cd"
            android:gravity="center"
            android:text="@string/tx_edu_tech_as_is_download_contents_title"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@null"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

    </RelativeLayout>

</FrameLayout>
